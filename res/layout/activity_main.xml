<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyx1011.youkumenu.MainActivity" >

    <!-- 最内层 -->

    <RelativeLayout
        android:id="@+id/menu1"
        android:layout_width="69dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/level1" >

        <ImageView
            android:id="@+id/menu1_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_home"
            android:clickable="true" />
    </RelativeLayout>

    <!-- 中间层 -->

    <RelativeLayout
        android:id="@+id/menu2"
        android:layout_width="144dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/level2" >

        <ImageView
            android:id="@+id/menu2_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_menu"
            android:clickable="true" />

        <ImageView
            android:id="@+id/menu2_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_search" />

        <ImageView
            android:id="@+id/menu2_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_myyouku" />
    </RelativeLayout>

    <!-- 最外层 -->

    <RelativeLayout
        android:id="@+id/menu3"
        android:layout_width="222dp"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/level3" >

        <ImageView
            android:id="@+id/menu3_midle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/channel4" />

        <ImageView
            android:id="@+id/menu3_left1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/channel1" />

        <ImageView
            android:id="@+id/menu3_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/channel5" />

        <ImageView
            android:id="@+id/menu3_left2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/menu3_left1"
            android:layout_marginLeft="25dp"
            android:background="@drawable/channel2" />

        <ImageView
            android:id="@+id/menu3_left3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/menu3_left2"
            android:layout_marginLeft="55dp"
            android:background="@drawable/channel3" />

        <ImageView
            android:id="@+id/menu3_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/menu3_right1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:background="@drawable/channel6" />

        <ImageView
            android:id="@+id/menu3_right3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/menu3_right2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="53dp"
            android:background="@drawable/channel7" />
    </RelativeLayout>

</RelativeLayout>